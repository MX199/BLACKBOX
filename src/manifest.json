{
  "manifest_version": 3,
  "name": "BLACKBOX for BandLab",
  "version": "1.1.0",
  "description": "Stealth auto-save and connection tool for BandLab Studio. Made for creators.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.bandlab.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.bandlab.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["logo-png.png"],
      "matches": ["https://www.bandlab.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
